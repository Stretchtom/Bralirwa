<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.tmutabazi.schoolrecords.UserInterface.top_section_fragment"
        android:id="@+id/fragment"
        tools:layout="@layout/top_section_fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <fragment
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:name="com.example.tmutabazi.schoolrecords.UserInterface.disp_section_fragment"
        android:id="@+id/fragment2"
        tools:layout="@layout/disp_section_fragment"
        android:layout_below="@+id/fragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/fragment3" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:name="com.example.tmutabazi.schoolrecords.UserInterface.stat_section_fragment"
        android:id="@+id/fragment3"
        tools:layout="@layout/statistiv_view_fragment"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/fragment2"
        android:layout_alignEnd="@+id/fragment2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
