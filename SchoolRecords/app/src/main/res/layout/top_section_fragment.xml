<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/top_section_fragment">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/entries"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/gen_res"
        android:layout_toEndOf="@+id/gen_res"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="46dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Results"
        android:id="@+id/gen_res"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NO of entries"
        android:id="@+id/textView2"
        android:layout_above="@+id/entryButton"
        android:layout_alignRight="@+id/gen_res"
        android:layout_alignEnd="@+id/gen_res" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Entry"
        android:id="@+id/entryButton"
        android:layout_below="@+id/entries"
        android:layout_alignRight="@+id/entries"
        android:layout_alignEnd="@+id/entries"
        android:layout_alignLeft="@+id/entries"
        android:layout_alignStart="@+id/entries" />

</RelativeLayout>